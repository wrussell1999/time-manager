<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/time_to_leave"
            android:textColor="@color/white"
            android:textSize="@dimen/output_text_size"
            android:textStyle="bold"
            android:gravity="center" />
        <TimePicker
            android:id="@+id/time_to_leave_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </TimePicker>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mtrl_card_spacing"
            android:minHeight="100dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/time_to_start_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/details_ouput"
                    android:layout_marginBottom="4dp"
                    android:paddingTop="@dimen/details_ouput"
                    android:paddingLeft="@dimen/details_ouput"
                    android:textSize="@dimen/output_text_size"
                    android:textColor="@color/textColor"
                    android:text="@string/placeholder_start_time"/>
                <TextView
                    android:id="@+id/total_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_margin="@dimen/details_ouput"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="@dimen/details_ouput"
                    android:textSize="@dimen/output_text_size"
                    android:textColor="@color/textColor"
                    android:text="@string/placeholder_total_time"/>

                <TextView
                    android:id="@+id/total_tasks_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_margin="@dimen/details_ouput"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:paddingBottom="@dimen/details_ouput"
                    android:paddingLeft="@dimen/details_ouput"
                    android:textSize="@dimen/output_text_size"
                    android:textColor="@color/textColor"
                    android:text="@string/placeholder_tasks_total"/>
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>